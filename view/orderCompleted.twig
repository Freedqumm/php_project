		<script>
			document.addEventListener('DOMContentLoaded', function () { // Créer un lien vers le fichier PDF
var pdfUrl = '../public/rsc/docs/Facture.pdf';

// Créer un élément d'ancrage (lien) invisible
var downloadLink = document.createElement('a');
downloadLink.href = pdfUrl;

// Spécifier le nom du fichier PDF à télécharger
downloadLink.download = 'Facture.pdf';

// Ajouter l'élément d'ancrage à la page
document.body.appendChild(downloadLink);

// Simuler un clic sur le lien pour déclencher le téléchargement
downloadLink.click();

// Supprimer l'élément d'ancrage de la page (facultatif)
document.body.removeChild(downloadLink);
});
